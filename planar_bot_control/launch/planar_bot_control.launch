<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find planar_bot_control)/config/planar_bot_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
  output="screen" ns="/planar_bot" args="joint_state_controller
            asc_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
  respawn="false" output="screen">
    <remap from="/joint_states" to="/planar_bot/joint_states" />
  </node>
  
  <node type="rviz" name="rviz" pkg="rviz"/>
  
  <node pkg="planar_bot_description" name="sphere_publisher" type="plot_sphere.py" output="screen"/> 

</launch>
